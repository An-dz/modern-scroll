{	
	"name"				: "modern scroll",
	"description"		: "__MSG_description__",
	"developer"			: {"name" : "Christoph142", "url" : "https://twitter.com/Christoph142"},
	"homepage_url"		: "https://github.com/Christoph142/modern-scroll",
	
	"default_locale"	: "en",
	"version"			: "3.0.6",
	"icons"				: { "16": "images/contextmenu.png", "128": "images/icon@2x.png" },
	
	"content_scripts" :
	[{
		  "matches"		: ["<all_urls>"],
		  "css"			: ["includes/hide_default_bars.css"],
		  "js"			: ["includes/modern_scroll.js"],
		  "run_at"		: "document_start",
		  "all_frames"	: true
	}],
	
	"background"		: {"scripts": ["background.js"]},
  
	"permissions"		: ["contextMenus", "storage"],
	"options_page"		: "options/options.html",
	
	"offline_enabled"	: true,
	"manifest_version"	: 2
}